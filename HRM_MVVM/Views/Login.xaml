<Window x:Class="HRM_MVVM.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM_MVVM.Views"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="450">
    <Window.Background>
        DarkViolet
    </Window.Background>
    <Grid>
    <Grid HorizontalAlignment="left" Width="285" Margin="80,49,0,0" Style="{DynamicResource grid_style1}" RenderTransformOrigin="-0.311,0.493" Height="146" VerticalAlignment="Top">
        <Grid.Background>
            <Brush>#eee</Brush>
        </Grid.Background>
        <TextBlock FontFamily="Tahoma" FontWeight="Bold" Margin="106,67,115,60" RenderTransformOrigin="1.439,2.318"><Run Text="password"/></TextBlock>

        <TextBox FontFamily="Tahoma"  Padding="4" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="top" Width="201" Margin="44,36,0,0"/>
        <PasswordBox Padding="4" Margin="44,89,40,35" />
        <TextBlock FontFamily="Tahoma" FontWeight="Bold" Margin="119,14,128,113" RenderTransformOrigin="1.439,2.318" Text="Email"/>
    </Grid>
    
        <Button Content="login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="179,216,0,0"/>
    </Grid>

</Window>
